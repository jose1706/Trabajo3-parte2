    private void limpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        txtareacirculo.setText("");
        txtperimetrocirculo.setText("");
        txtarearectangulo.setText("");
        txtperimetrorectangulo.setText("");
        txtareacuadrado.setText("");
        txtperimetrocuadrado.setText("");
        txtareatriangulo.setText("");
        txtperimetrotriangulo.setText("");
        txttipotriangulo.setText("");
        txtarearombo.setText("");
        txtperimetrorombo.setText("");
        txtareatrapecio.setText("");
        txtperimetrotrapecio.setText("");
    }                                       

    private void EmpezarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        double radio, base_rec, alt_rec, lado_cua, base_tri, alt_tri, diagonal_mayor, diagonal_menor, lado_rombo;
        double base_menor, base_mayor, altura, lado_trape;
        try{
        radio = Double.parseDouble(JOptionPane.showInputDialog("Ingrese el radio del circulo: "));
        base_rec = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la base del rectangulo "));
        alt_rec = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la altura del rectangulo: "));
        lado_cua = Double.parseDouble(JOptionPane.showInputDialog("Ingrese el lado del cuadrado: "));
        base_tri = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la base del triangulo: "));
        alt_tri = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la altura del triangulo: "));
        diagonal_mayor = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la diagonal mayor del rombo: "));
        diagonal_menor = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la diagonal menor del rombo: "));
        lado_rombo = Double.parseDouble(JOptionPane.showInputDialog("Ingrese el lado del rombo: "));
        base_menor = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la base menor del trapecio: "));
        base_mayor = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la base mayor del trapecio: "));
        altura = Double.parseDouble(JOptionPane.showInputDialog("Ingrese la altura del trapecio: "));
        lado_trape =  Double.parseDouble(JOptionPane.showInputDialog("Ingrese el lado del trapecio: ")); 
        Circulo figura1 = new Circulo(radio);
        Rectangulo figura2 = new Rectangulo(base_rec,alt_rec);
        cuadrado figura3 = new cuadrado(lado_cua);
        trianguloRectangulo figura4 = new trianguloRectangulo(base_tri,alt_tri);
        rombo figura5 = new rombo(diagonal_mayor, diagonal_menor, lado_rombo);
        trapecio figura6 = new trapecio(base_mayor, base_menor, altura, (int) lado_trape);
        txtareacirculo.setText(String.valueOf(figura1.calcularArea()));
        txtperimetrocirculo.setText(String.valueOf(figura1.calcularPerimetro()));
        txtarearectangulo.setText(String.valueOf(figura2.calcularArea()));
        txtperimetrorectangulo.setText(String.valueOf(figura2.calcularPerimetro()));
        txtareacuadrado.setText(String.valueOf(figura3.calcularArea()));
        txtperimetrocuadrado.setText(String.valueOf(figura3.calcularPerimetro()));
        txtareatriangulo.setText(String.valueOf(figura4.calcularArea()));
        txtperimetrotriangulo.setText(String.valueOf(figura4.calcularPerimetro()));
        txttipotriangulo.setText(String.valueOf(figura4.determinarTipoDeTriangulo()));
        txtarearombo.setText(String.valueOf(figura5.calcularArea()));
        txtperimetrorombo.setText(String.valueOf(figura5.calcularPerimetro()));
        txtareatrapecio.setText(String.valueOf(figura6.calcularArea()));
        txtperimetrotrapecio.setText(String.valueOf(figura6.calcularPerimetro()));
        }catch (NumberFormatException e){
           JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
       }
    }                                       

